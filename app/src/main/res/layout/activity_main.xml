<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#1f1e1e"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1f1e1e"
        android:text=""
        android:textColor="#f6f6f6"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="1"
        tools:ignore="RtlCompat"/>

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1f1e1e"
        android:text=""
        android:textColor="#fff"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        tools:ignore="RtlCompat"/>

    <!-- Calculator Buttons Section -->
    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:padding="10dp"
        android:layout_height="0dp">

        <!-- First Row of Buttons -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="AC"
                android:textColor="#ffffff"
                android:textSize="19sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bdot"
                android:text="√"
                android:textSize="23sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bb1"
                android:text="("
                android:textSize="23sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bb2"
                android:text=")"
                android:textSize="23sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <!-- Second Row of Buttons -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bsin1"
                android:text="M+"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bcos1"
                android:text="M-"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btan1"
                android:text="MS"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/blog1"
                android:text="MR"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bln1"
                android:text="MC"
                android:textSize="20sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bsin"
                android:text="sin"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bcos"
                android:text="cos"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btan"
                android:text="tan"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/blog"
                android:text="log"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bln"
                android:text="ln"
                android:textSize="20sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- Third Row of Buttons -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bfact"
                android:text="π"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bsquare"
                android:text="x²"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bsqrt"
                android:text="X!"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/binv"
                android:text="%"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bdiv"
                android:text="÷"
                android:textSize="25sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- Fourth Row of Buttons -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b7"
                android:text="7"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b8"
                android:text="8"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b9"
                android:text="9"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bmul"
                android:text="×"
                android:textSize="30sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- Fifth Row of Buttons -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b4"
                android:text="4"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b5"
                android:text="5"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b6"
                android:text="6"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bmin"
                android:text="-"
                android:textSize="30sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- Sixth Row of Buttons -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b1"
                android:text="1"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b2"
                android:text="2"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b3"
                android:text="3"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bplus"
                android:text="+"
                android:textSize="30sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- Seventh Row of Buttons -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bpi"
                android:text="."
                android:textSize="30sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b0"
                android:text="0"
                android:textSize="23sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bc"
                android:text="DEL"
                android:textSize="19sp"
                android:background="@drawable/grey_button_background"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bequal"
                android:text="="
                android:textSize="30sp"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
